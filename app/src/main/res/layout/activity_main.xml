<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/bg_activity">


    <fragment
        android:name="com.example.yangjiyu.myapplication.SourceItemListFragment"
        android:id="@+id/fragment_source_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:name="com.example.yangjiyu.myapplication.VideoWallFragment"
            android:id="@+id/fragment_video_wall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="5dp"/>

        <fragment
            android:name="com.example.yangjiyu.myapplication.SourceItemFragment"
            android:id="@+id/fragment_source_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>
