<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@layout/bg_fragment">

        <ImageView
            android:id="@+id/iv_source_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/desktop_red_"/>
        <TextView
            android:id="@+id/tv_source_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_source_list"
            android:layout_alignTop="@+id/iv_source_list"
            android:layout_alignBottom="@+id/iv_source_list"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="信号源列表"/>
    </RelativeLayout>
